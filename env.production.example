# Production Environment Variables for Operator Skills Hub
# Copy this file to .env.production and update with your actual values

# =============================================================================
# SECURITY SETTINGS (CRITICAL - CHANGE THESE!)
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Session Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=operatorskillshub
POSTGRES_USER=operatorskillshub_user
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://operatorskillshub_user:your-secure-database-password@db:5432/operatorskillshub

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=https://operatorskillshub.com,https://www.operatorskillshub.com
TRUSTED_HOSTS=operatorskillshub.com,www.operatorskillshub.com

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_EMAIL=admin@operatorskillshub.com
SSL_CERT_PATH=/etc/letsencrypt/live/operatorskillshub.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/operatorskillshub.com/privkey.pem
FORCE_HTTPS=true

# =============================================================================
# AI INTEGRATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# =============================================================================
# FILE UPLOAD SECURITY
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/gif,text/plain

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_MONITORING=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Operator Skills Hub
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/backups

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT=30

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=operatorskillshub-files

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEVELOPMENT OVERRIDES (Set to false in production)
# =============================================================================
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_API_DOCS=true
