# Application Settings
APP_NAME="Operator Skills Hub"
APP_VERSION="1.0.0"
DEBUG=false

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/operator_skills_hub"
DATABASE_TEST_URL="postgresql://postgres:postgres@localhost:5432/operator_skills_hub_test"

# Redis
REDIS_URL="redis://localhost:6379"

# Security
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Integration
OPENAI_API_KEY="your-openai-api-key"
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="operator-skills-hub"

# CSCS Integration
CSCS_API_KEY="your-cscs-api-key"
CSCS_API_URL="https://api.cscs.co.uk"

# Email/SMS
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Payment Processing
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

